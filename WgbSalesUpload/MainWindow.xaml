<Window x:Class="WgbSalesUpload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wgb Sales Upload" Foreground="AntiqueWhite" Height="350" Width="525" >
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Username:" HorizontalAlignment="Left" Margin="27,36,0,0" VerticalAlignment="Top" Width="91"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="27,83,0,0" VerticalAlignment="Top" Width="73"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="118,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="118,83,0,0" VerticalAlignment="Top" Height="26" Width="120"/>
        <Button Content="Sign In" HorizontalAlignment="Left" Margin="118,137,0,-28" Width="75" RenderTransformOrigin="0.588,0.646" Click="Button_Click"/>

    </Grid>
</Window>
